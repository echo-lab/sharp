hush

d7 $ s "arpy"

xfadeIn 1 8 $ n "~"

xfadeIn 2 8 $ n "~"

xfadeIn 3 8 $ n "~"

xfadeIn 4 8 $ n "~"

xfadeIn 5 8 $ n "~"

xfadeIn 4 8 $ n "~"

d6 $ loopAt 8 $ s "bev:1" # gain 1.5 # delay 0.2 # distort 1


d1 $ jux rev $ n "<e f g a> c a c [f*3] a e [<a c e> d a c]"
# s "superpiano"

